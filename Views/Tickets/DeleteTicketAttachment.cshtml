@model BugTracker.Models.Ticket

@using BugTracker.Services.Interfaces
@using Microsoft.AspNetCore.Identity
@using BugTracker.Models.Enums.Enums

@inject IBTFileService _BTFileService
@inject IBTProjectService _ProjectService

@{
    ViewData["Title"] = "DeleteTicketAttachment";
}


@{


    Project project = new();

    Ticket ticket = new();
}


<div class="row">
    <div class="col-12 col-md-8 offset-md-2">
        <h2>Are you sure?</h2>
        <p class="text-lead text-muted">This ticket will be archived and no longer available for development.</p>
        <div class="card mb-3">
            <div class="row g-0">

                <div class="col-md-5">
                    <div class="card-body">

                        <div class="form-group row align-items-center mb-0">
                            <label asp-for="Title" class="col-4 text-end control-label col-form-label"><strong>Ticket Title</strong></label>
                            <div class="col-8 border-start pb-2 pt-2">
                                @Model.Title
                            </div>
                        </div>
                        <div class="form-group row align-items-center mb-0">
                            <label asp-for="Description" class="col-4 text-end control-label col-form-label">Description</label>
                            <div class="col-8 border-start pb-2 pt-2">
                                @Model.Description
                            </div>
                        </div>
                        @foreach (TicketAttachment ticketAttachment in Model.Attachments)
                        {

                            <div class="form-group row align-items-center mb-0">
                                <label asp-for="Attachments" class="col-4 text-end control-label col-form-label"><strong>Ticket Type</strong> </label>
                                <div class="col-8 border-start pb-2 pt-2 badge bg-light-info text-info font-weight-medium fs-3">
                                    @Model.Attachments
                                </div>
                            </div>
                            <form class="d-flex justify-content-between" asp-action="DeleteTicketAttachment">
                                <input hidden asp-for="Id" />
                                <a asp-action="Index" asp-controller="Tickets" class="btn btn-outline-secondary rounded-pill btnLink">Cancel</a>
                                <input type="submit" value="Delete Ticket Attachment" class="btn btn-danger rounded-pill btnLink">
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
