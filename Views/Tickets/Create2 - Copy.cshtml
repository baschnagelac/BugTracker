<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create a New Ticket</h4>
                <h6 class="card-subtitle">For Development</h6>
            </div>
            <form class="form-horizontal r-separator border-top">
                <div class="card-body">
                    <div class="form-group row align-items-center mb-0">
                        <label asp-for="Title" class="col-3 text-end control-label col-form-label">Ticket Title</label>
                        <div class="col-9 border-start pb-2 pt-2">
                            <input type="text" asp-for="Title" class="form-control"  placeholder="Title Goes Here">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row align-items-center mb-0">
                        <label asp-for="Description" class="col-3 text-end control-label col-form-label">Project Name</label>
                        <div class="col-9 border-start pb-2 pt-2">
                            <input type="text" class="form-control" asp-for="Description" placeholder="Project Name Here">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="form-group row align-items-center mb-0">
                        <label asp-for="ProjectId" class="col-3 text-end control-label col-form-label">For the Project: </label>
                        <div class="col-9 border-start pb-2 pt-2">
                            <input asp-items="ViewBag.ProjectId" class="form-control" asp-for="ProjectId" >
                        </div>
                    </div>
                </div>
                <div class="p-3 border-top">
                    <div class="form-group mb-0 text-end">
                        <button type="submit" class="btn btn-info rounded-pill px-4 waves-effect waves-light">Save</button>
                        <button type="submit" class="btn btn-dark rounded-pill px-4 waves-effect waves-light">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
