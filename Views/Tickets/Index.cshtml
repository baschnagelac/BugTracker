@model IEnumerable<BugTracker.Models.Ticket>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a value="Create" class="btn btn-info rounded-pill px-4 waves-effect waves-light" asp-action="Create">Create New Ticket</a>

</p>
<!-- -------------------------------------------------------------- -->
<!-- Container fluid  -->
<!-- -------------------------------------------------------------- -->
<div class="container-fluid page-content">
    <!-- -------------------------------------------------------------- -->
    <!-- Start Page Content -->
    <!-- -------------------------------------------------------------- -->
    <!-- basic table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Tickets</h4>
                    <div class="row mt-4">
                        <!-- Column -->
                        <div class="col-md-6 col-lg-3 col-xlg-3">
                            <div class="card card-hover">
                                <div class="p-2 rounded bg-light-primary text-center">
                                    <h1 class="fw-light text-primary">2222</h1>
                                    <h6 class="text-primary">Total Tickets</h6>
                                </div>
                            </div>
                        </div>
                        <!-- Column -->
                        <div class="col-md-6 col-lg-3 col-xlg-3">
                            <div class="card card-hover">
                                <div class="p-2 rounded bg-light-warning text-center">
                                    <h1 class="fw-light text-warning">1,738</h1>
                                    <h6 class="text-warning">In Progress</h6>
                                </div>
                            </div>
                        </div>
                        <!-- Column -->
                        <div class="col-md-6 col-lg-3 col-xlg-3">
                            <div class="card card-hover">
                                <div class="p-2 rounded bg-light-success text-center">
                                    <h1 class="fw-light text-success">1100</h1>
                                    <h6 class="text-success">Urgent</h6>
                                </div>
                            </div>
                        </div>
                        <!-- Column -->
                        <div class="col-md-6 col-lg-3 col-xlg-3">
                            <div class="card card-hover">
                                <div class="p-2 rounded bg-light-danger text-center">
                                    <h1 class="fw-light text-danger">964</h1>
                                    <h6 class="text-danger">Closed</h6>
                                </div>
                            </div>
                        </div>
                        <!-- Column -->
                    </div>
                    <div class="table-responsive mt-4">
                        <table id="zero_config" class="table table-bordered table-striped no-wrap fs-3">
                            <thead>
                                <tr class ="fs-4 font-weight-bold">
                                    <th>@Html.DisplayNameFor(model => model.TicketStatus)</th>
                                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                                    <th>@Html.DisplayNameFor(model => model.Project)</th>
                                    <th>@Html.DisplayNameFor(model => model.Created)</th>
                                    <th>@Html.DisplayNameFor(model => model.Updated)</th>
                                    <th>@Html.DisplayNameFor(model => model.TicketType)</th>
                                    <th>@Html.DisplayNameFor(model => model.TicketPriority)</th>
                                    <th>Edit | Details | Delete</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model) 
                                {
                                     <tr>
                                        <td><span class="badge bg-light-warning text-warning font-weight-medium">@Html.DisplayFor(modelItem => item.TicketStatus.Name)</span></td>
                                        <td><span class="font-weight-medium link">@Html.DisplayFor(modelItem => item.Title)</span></td>
                                        <td><a asp-action="Details" asp-controller="Projects" asp-route-id="@item.Id" class="fw-bold link">@Html.DisplayFor(modelItem => item.Project.Name)</a></td>
                                        <td>@Html.DisplayFor(modelItem => item.Created)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Updated)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TicketType.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TicketPriority.Name)</td>
                                        <td>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a asp-action="AssignTicketDev" asp-controller="Tickets" asp-route-id="@item.Id">Assign Ticket</a> <span>|</span>
                                            }
                                            @if (User.IsInRole("ProjectManager"))
                                            {
                                                <a asp-action="AssignTicketDev" asp-controller="Tickets" asp-route-id="@item.Id">Assign Ticket</a> <span>|</span>
                                            }
                                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill text-warning fs-6 p-2"></i></a> 
                                            <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-circle text-info fs-6 p-2"></i></a> 
                                            <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill text-danger fs-6 p-2"></i></a>
                                        </td>
                                     </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr class="fs-4 font-weight-bold">
                                    <th>Ticket Status</th>
                                    <th>Title</th>
                                    <th>Project</th>
                                    <th>Created</th>
                                    <th>Updated</th>
                                    <th>Ticket Type</th>
                                    <th>Ticket Priority</th>
                                    <th>Edit | Details | Delete</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- -------------------------------------------------------------- -->
<!-- End Container fluid  -->
<!-- -------------------------------------------------------------- -->
